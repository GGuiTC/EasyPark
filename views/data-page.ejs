<link rel="stylesheet" href="/css2/data-page.css">
</head>
<%- include ("partials/navbar3.ejs") %>
<body>
    <div class="background-overlay"></div>
    <div class="tetudo justify-center">
        <div class="margin">
            <div class="div-header">
                <h2>Data do Agendamento</h2>
                <form action="/reserva_vaga" method="post">
                    <label for="date">Insira a data de sua preferência:</label>
                    <input type="date" name="date" id="date" min="" class="input_inputes" required>

                    <label for="date">Insira o horário de sua preferência:</label>
                    <input type="time" name="time" id="time" class="input_inputes" required>

                    <button type="submit" class="btn_yellow">Ver vagas</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ("partials/footer.ejs") %>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const dataInput = document.getElementById("date");
        const hoje = new Date().toISOString().split("T")[0]; // Obtém a data atual no formato 'YYYY-MM-DD'
        dataInput.min = hoje; // Define o valor mínimo como a data de hoje
    });
</script>