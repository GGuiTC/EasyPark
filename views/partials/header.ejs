<script>
    function mascaraTelefone(input) {
        let telefone = input.value.replace(/\D/g, "");
        telefone = telefone.replace(/^(\d{2})(\d)/g, "($1) $2");
        telefone = telefone.replace(/(\d{5})(\d)/, "$1-$2");
        input.value = telefone.substring(0, 15);
    }

    function mascaraCPF(input) {
        let cpf = input.value.replace(/\D/g, "");
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2");
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2");
        cpf = cpf.replace(/(\d{3})(\d{1,2})$/, "$1-$2");
        input.value = cpf.substring(0, 14);
    }

    function mascaraRG(input) {
        let rg = input.value.replace(/\D/g, "");
        rg = rg.replace(/(\d{2})(\d)/, "$1.$2");
        rg = rg.replace(/(\d{3})(\d)/, "$1.$2");
        rg = rg.replace(/(\d{3})(\d{1})$/, "$1-$2");
        input.value = rg.substring(0, 12);
    }
    
    function formatarParaReais(input) {
        // Remove todos os caracteres que não sejam números
        let valor = input.value.replace(/\D/g, "");
        
        // Converte o valor para centavos, se ele existir
        if (valor.length > 0) {
            valor = (parseInt(valor) / 100).toFixed(2);
            // Converte para o formato de moeda brasileira
            valor = "R$ " + valor.replace(".", ",");
        } else {
            valor = "R$ 0,00";
        }

        input.value = valor;
    }
</script>
